<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.petpal.petpaltravel">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ApplyForDemand"></activity>
        <activity android:name=".activities.ApplyForOffer" />
        <activity android:name=".activities.ManageOfferActivity" />
        <activity android:name=".activities.ManageDemandActivity" />
        <activity android:name=".activities.ViewAccountActivity" />
        <activity android:name=".activities.ShowOfferActivity" />
        <activity android:name=".activities.ShowDemandActivity" />
        <activity android:name=".activities.SearchOffersActivity" />
        <activity android:name=".activities.SearchDemandsActivity" />
        <activity android:name=".activities.RegisterActivity" />
        <activity android:name=".activities.ForgotPassActivity" />
        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>